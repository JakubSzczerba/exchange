{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Exchange Rate
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.currency, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.timeRange, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_end(form) }}
                        {% if result is not empty %}
                            <hr>
                            {% if result.min is not null and result.max is not null %}
                                <div class="alert alert-secondary ">
                                    {{ result.code }} exchange rate at
                                    <span style="font-weight: bold">{{ result.startDate }} - {{ result.endDate }}</span>
                                </div>
                                <div class="alert alert-danger ">
                                    Min rate: <span style="font-weight: bold">{{ result.min }}</span>
                                </div>
                                <div class="alert alert-success">
                                    Max rate: <span style="font-weight: bold">{{ result.max }}</span>
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    No data for
                                    <span style="font-weight: bold">{{ result.startDate }} - {{ result.endDate }}</span>
                                </div>
                            {% endif %}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}